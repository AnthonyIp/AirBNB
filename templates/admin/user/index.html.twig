{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion des utilisateurs</h1>

        <table class="table table-hover">
            <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Nom</th>
                <th>Email</th>
                <th>Annonces</th>
                <th>RÃ©servation</th>
                <th>Commentaire</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in pagination.data %}
                <tr class="text-center">
                    <td>{{ user.id }}</td>
                    <td>{{ user.fullName }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.ads | length }}</td>
                    <td>{{ user.bookings | length }}</td>
                    <td>{{ user.comments | length }}</td>
                    <td>
                        <a href="{{ path('admin_users_edit',{'id': user.id}) }}" class="badge badge-success"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_users_delete', {'id': user.id} ) }}" class="badge badge-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}

