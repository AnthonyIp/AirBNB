{% extends 'admin/base.html.twig' %}

{% block title %}Administration des annonces{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="my-5 text-center">Gestion des annonces</h1>

        <table class="table table-hover">
            <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Auteur</th>
                <th class="text-center">Reservations</th>
                <th class="text-center">Note</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for ad in pagination.data %}
                <tr>
                    <td>{{ ad.id }}</td>
                    <td>{{ ad.title }}</td>
                    <td>
                        <img src="{{ ad.author.picture }}" alt="Avatar de {{ ad.author.fullName }}"
                             class="avatar avatar-micro mr-2">
                        {{ ad.author.fullName }}
                    </td>
                    <td class="text-center">
                        <span class="badge badge-primary rounded">{{ ad.bookings | length }}</span>
                    </td>
                    <td class="text-center">{% include 'partials/rating.html.twig' with {'rating': ad.avgRatings} %}</td>
                    <td>
                        <a href="" class="badge badge-primary"><i class="fas fa-edit"></i></a>
                        <a href="" class="badge badge-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        {{ pagination.display() }}
    </div>
{% endblock %}
