{% extends 'admin/base.html.twig' %}

{% block title %}Modification de la réservation n°{{ booking.id }} {% endblock %}

{% form_theme form _self %}

{% block body %}
    <div class="container">
        <h1 class="my-5 text-center">Modification de la réservation n°{{ booking.id }}</h1>

        {{ form_start(form) }}

        <div class="row">
            <div class="col">
                {{ form_row(form.startDate) }}
                {{ form_row(form.booker) }}
                {{ form_row(form.ad) }}
            </div>
            <div class="col">
                {{ form_row(form.endDate) }}
                {{ form_row(form.comment) }}
                <input type="hidden" name="referer" value="{{ app.request.headers.get('referer') }}"/>
            </div>

        </div>
        <br>
        <div class="text-center">
            <a href="{{ app.request.headers.get('referer') }}" class="btn btn-danger">
                <i class="fas fa-chevron-left"></i>
                Retour à la page précédente
            </a>
            <button type="submit" class="btn btn-success">
                <i class="fas fa-check"></i>
                Enregistrer les modifications
            </button>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}


