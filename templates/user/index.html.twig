{% extends 'base.html.twig' %}

{% block title %}Page de {{ user.fullName }}{% endblock %}

{% block body %}
    <div class="user-profile">
        <div class="container">
            <div class="row align-items-center user-profile-header mb-5">
                <div class="col-3 text-center">
                    <img src="{{ user.picture }}" alt="Avatar de {{ user.fullName }}" class="avatar mb-3">
                    <br>
                    <span class="badge badge-primary">{{ user.ads|length }} annonces</span>
                </div>
                <div class="col-9">
                    <h1>{{ user.fullName }}</h1>
                    {% if user is same as (app.user) %}
                        <div class="mt-3">
                            <a href="{{ path('account_profile') }}"class="btn btn-primary mr-2 mb-2">Modifier mes informations</a>
                            <a href="{{ path('account_password') }}" class="btn btn-primary mb-2">Modifier mon mot de passe</a>
                        </div>
                    {% endif %}
                </div>
            </div>

            <div class="user-profile-description mb-5">
                {{ user.description | raw }}
            </div>
            <hr>

            <div class="user-profile-ads mb-5">
                <h2 class="mb-4">Les annonces de {{ user.fullName }}</h2>
                {% if user.ads | length > 0 %}
                    <div class="row">
                        {% for ad in user.ads %}
                            {% include 'ad/_ad.html.twig' %}
                        {% endfor %}
                    </div>

                {% else %}
                    <div class="">
                        <p class="text-center">
                            <span><strong>{{ user.fullName }}</strong> n'a pas encore publi√© d'annonce sur le site.</span>
                        </p>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
