{% extends 'base.html.twig' %}

{% block title %}Profile de l'utilisateur{% endblock %}

{% block body %}
    <div class="profile">
        <div class="container">
            <h1 class="my-5 text-center">Modification du profil</h1>

            {{ form_start(form) }}
            <div class="row">
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-headings">Informations générales</h2>
                        <hr>
                        {{ form_row(form.firstName) }}
                        {{ form_row(form.lastName) }}
                        {{ form_row(form.email) }}
                        {{ form_row(form.picture) }}
                    </div>
                </div>
                <div class="col">
                    <div class="alert alert-light">
                        <h2 class="alert-heading">Détails</h2>
                        <hr>
                        {{ form_row(form.introduction) }}
                        {{ form_row(form.description) }}
                        <hr>
                        <p>Si vous avez terminé, vous pouvez sauvegarder</p>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i>
                            Enregistrer</button>
                    </div>
                </div>
            </div>

            {{ form_end(form) }}

        </div>
    </div>
{% endblock %}
