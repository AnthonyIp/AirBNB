{% extends 'base.html.twig' %}

{% block title %}Connexion au site{% endblock %}

{% block body %}

    <div class="login">
        <div class="container">
            <div class="row">
                <div class="col-md-3">&nbsp;</div>
                <div class="col-md-6">
                    <div class="bg-light py-3 px-3 rounded">
                        <h1>Connectez vous</h1>
                        {% if hasError %}
                            <div class="alert alert-danger">Une erreur est survenue, l'email ou le mot de passe est invalide.</div>
                        {% endif %}

                        <form action="{{ path('account_login') }}" method="post">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="text" name="_username" id="email" class="form-control"
                                       placeholder="Adresse Email" required value="{{ username }}">
                            </div>
                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" name="_password" id="password" class="form-control"
                                       placeholder="Mot de passe" required>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-success">Connexion</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
